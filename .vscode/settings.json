// todo: move this settings to global or user-specific?

{   
    // -- python settings
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true, // pytest should be installed
    "python.linting.flake8Enabled": true, // flake8 should be installed
    "python.linting.mypyEnabled": true, // mypy should be installed

    // -- vertical rulers
    "editor.rulers": [ // general rules for all editors
        {
            "column": 110,    // spacing of 1st column from left
            "color": "#77a4b6ce"   // orange, Go Vols!
        },
        // 100,  // 2nd ruler with no color option
        {
            "column": 120,      // third ruler
            "color": "#a18aaf"  // purple, go Pirates! 
        },
    ],

    "[ruby]": { // language-specific rules (sample)
        "editor.rulers": [
            {
                "column": 100,
                "color": "#00ff22"
            }
        ]
    },

    // -- font setup
    //"editor.fontFamily": "JetBrains Mono",
    "editor.fontSize": 14, // we may use 14.5 as well
    //"editor.fontLigatures": true,

}